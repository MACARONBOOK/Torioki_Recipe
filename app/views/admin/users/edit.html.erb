<div class = "container">
  <div class = "title text-center">
    <div>
      <%= image_tag @user.get_image, size:'55x55', class: "rounded-circle"%>
      <%= @user.nickname %>さんの プロフィール編集
    </div>
  </div>
  <div class = "card">
    <div class ="row justify-content-center">
      <div class = "col-8">
        <%= form_with model: @user, url: admin_user_path, method: :patch, local: true do |f| %>
          <h6 class = "text-muted pb-1 pt-3">画像</h5>
          <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>

          <h6 class = "text-muted pb-1 pt-3">名前</h5>
          <%= f.text_field :name, class: "form-control" %>

          <h6 class = "text-muted pb-1 pt-3">ニックネーム</h5>
          <%= f.text_field :nickname, class: "form-control" %>

          <h6 class = "text-muted pb-1 pt-3">自己紹介</h5>
          <%= f.text_area :introduction, class: "form-control" %>

          <div class = "pb-1 pt-3">
            <%= f.submit "更新", class: "btn btn-secondary bg-secondary text-white" %>
          </div>
          <div class = "float-center mt-3">
           <% if @user.is_valid == true %>
           <div><%= link_to "ユーザーの退会はこちら", confirm_unsubscribe_path(@user), class: "link mr-2" %></div>
           <% else %>
           <% end %>
          </div>
         <% end %>
      </div>
    </div>
  </div>
</div>