<section class="bookmark">
  <% if user_signed_in? %>
    <% if recipe.bookmarked_by?(current_user) %>
      <%= link_to recipe_bookmarks_path(recipe), remote: true, method: :delete, class: "bookmark__link" do %>
        <i class="fas fa-heart bookmark__btn"></i>
      <% end %>
      <span class="bookmark__count"><%= recipe.bookmarks.length %></span>
    <% else %>
      <%= link_to recipe_bookmarks_path(recipe), remote: true, method: :post, class: "bookmark__link" do %>
        <i class="far fa-heart bookmark__btn"></i>
      <% end %>
      <span class="bookmark__count"><%= recipe.bookmarks.length %></span>
    <% end %>
  <% end %>
</section>