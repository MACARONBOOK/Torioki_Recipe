<% if @user == current_user %>
  <div class = "title text-center">マイページ</div>
<% else %>
  <div class = "title text-center"><%= @user.nickname %>さんのマイページ</div>
<% end %>

<div class = "container">
  <div class="text-center px-5">
    <div class = "card pt-5">
        <div class = "text-center">
          <div class = "my-1"><%= image_tag @user.get_image, format: 'jpeg',fallback: "no-image.png", size:'150x150', class: "rounded-circle"%></div>
          <div class = "user-nickname"><%= @user.nickname %></div>
          <div class = "info-border"></div>
          <div class = "d-flex justify-content-around ml-4 pb-3">

            <div class= "user-box">
              <div class="show_count">
              <div><%= @user.recipes.count %></div>
              <div class = "text-muted">投稿数</div>
              </div>
            </div>

            <div class="user-box">
              <div class="show_count">
                <div><%= link_to @user.comments.count, comments_user_path(@user.id), class: "link" %></div>
              </div>
              <div class = "text-muted">レシピへのコメント数</div>
            </div>

            <div class="user-box">
              <div class="show_count">
                <div><%= link_to @user.bookmarks.count, bookmarks_user_path(@user.id), class: "link" %></div>
              </div>
              <div class = "text-muted">ブックマーク数</div>
            </div>

          </div>
          <!--ページ下部-->
          <div class = "my-3 user-text"><%= @user.introduction %></div>
          <div>
            <div class = "py-2">
              <%= link_to recipes_path(@user) do %>
                 <div class="btntextchange"><span><i class="fas fa-book-open"></i></span><span>投稿一覧</span></div>
              <% end %>
            </div>
            <% if @user == current_user && @user.email != 'guest@example.com' %>
              <div class = "py-2">
                <%= link_to  edit_user_path(@user) do %>
                  <div class="btntextchange"><span><i class="fas fa-user-cog"></i></span><span>プロフィール編集</span></div>
                <% end %>
              </div>
              <div class = "py-2">
                <%= link_to bookmarks_user_path(@user) do %>
                   <div class="btntextchange"><span><i class="far fa-bookmark"></i></span><span>ブックマークした投稿</span></div>
                <% end %>
              </div>
            <% else %>
                <!-- ゲストは表示されない -->
            <% end %>
          </div>
        </div>
      </div>
  </div>
</dvi>