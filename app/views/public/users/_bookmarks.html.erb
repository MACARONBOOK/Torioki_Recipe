<div class="container">
 <div class="row">

      <div class="mt-3 col-md-3">
        <h6>Select</h6>
          <% if @user == current_user %>
            <p>以下は他のユーザーには表示されません。</p>
            <p style="font-size:18px;"><%=link_to"ブックマークしたレシピ　",bookmarks_user_path(user),class:"fas fa-star"%></p>
            <p style="font-size:18px;"><%=link_to "コメントしたレシピ", comments_user_path(user),class:"fas fa-comment-dots"%></p>
          <% end %>
      </div>

      <div class="col-md-7 ml-5">

        <% bookmark_recipes.each do |recipe| %>
        <!--投稿はカードで囲む-->
        <div class = "card">
          <div class = "card-body">
            <!--タイトル表示される文字数は２５文字までにしてます-->
            <h6 class = "card-title">
              <%= link_to recipe_path(recipe.id) do %><%= recipe.title.truncate(25) %>
              <% end %>
            </h6>
            <!--お気に入り、コメント数、投稿者は部分テンプレ-->
              <div id="<%= recipe.id %>"><%= render 'public/bookmarks/bookmark', recipe: recipe %></div>


          </div>
        </div>
        <% end %>

      </div>

 </div>
</div>


<style>
.card{
  padding:0;
  margin:0;
  border:none;
}

.post_box {
    padding: 0.5em 1em;
    border-left: double 7px #4ec4d3;/*左線*/
    border-right: double 7px #4ec4d3;/*右線*/
}

h6 {
  /*線の種類（実線） 太さ 色*/
  border-bottom: solid 3px #BDB76B;
}
</style>