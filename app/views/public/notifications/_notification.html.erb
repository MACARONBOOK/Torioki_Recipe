<% visiter = notification.visiter %>
<% recipe = notification.recipe %>

<ul>
    <li><%= link_to user_path(visiter) do %><strong><%=visiter.name %><% end %></strong>さんが
    <strong><%= link_to recipe_path(notification.recipe_id) do %><%= recipe.title.truncate(20)%><% end %></strong>にコメントしました。
    <%= " (#{time_ago_in_words(notification.created_at)} 前)" %></li>
    
</ul>