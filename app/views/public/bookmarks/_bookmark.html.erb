<% if recipe.bookmarked_by?(current_user) %>
    <div class = "d-flex">
      <div><%= link_to "", recipe_bookmarks_path(recipe), method: :delete, remote: true, class: "fas fa-bookmark" %></div>
      <div class = "ml-2"><%= recipe.bookmarks.count %>件</div>
    </div>
<% else %>
   <div class = "d-flex">
      <div><%= link_to "", recipe_bookmarks_path(recipe), method: :post, remote: true, class: "far fa-bookmark" %></div>
      <div class = "ml-2"><%= recipe.bookmarks.count %>件</div>
   </div>
<% end %>