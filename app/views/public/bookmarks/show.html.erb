<div class="container">
  <div class = "title text-center">Bookmark</div>
  <% if @bookmarks.exists? %>
    <% @bookmarks.each do |bookmark| %>
      <div class="card">
        <div class="card-body">
          <div class = "home-header">
            <h6 class="card-subtitle mb-2 text-muted">
              <%=link_to bookmark.recipe.user.name, user_path(bookmark.recipe.user.id), class: "link text-muted"%>さんが
              <%= bookmark.recipe.created_at.strftime("%Y年%m月%d日") %>に投稿
            <h6>
          </div>

          <div class = "home-main">
            <h4 class="card-title">
              <strong><%= link_to bookmark.recipe.title, bookmark.recipe, class: "link" %></strong>
            </h4>
            <h6 class="card-subtitle">
              <%= bookmark.recipe.sub_title %>
            </h6>
            <h6 class="card-subtitle text-muted">
              <i class = "fas fa-tags mt-3"></i>
              <% bookmark.recipe.tags.each do |tag| %>
                <%= tag.tag_name %>
              <% end %>
            </h6>

           <div class = "home-footer justify-content-end">
            <div class = "d-flex mr-3 mt-1">
              <div id="bookmark_button_<%= bookmark.recipe.id %>">
                <%= render "public/bookmarks/bookmark", recipe: bookmark.recipe %></div>
            </div>
            <div class = "d-flex">
              <%= render "public/recipes/rate", score: bookmark.recipe.avg_score %>
              <div class = "ml-2 mt-1"><%= bookmark.recipe.avg_score %>点</div>
            </div>
           </div>
          </div>
        </div>
      </div>
    <% end %>
      <div class = "pagination-sm py-3">
       <%= paginate @bookmarks %>
      </div>
  <% else %>
    <h5 class = "text-center py-5">Bookmarkした投稿はありません</h5>
  <% end %>
</div>